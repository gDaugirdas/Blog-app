<%- include("../partials/header.ejs") %>

<main>
	<div class="new__blog--container container">
		<h1 class="secondary__heading">Redaguok "<%= blog.title %>" įrašą</h1>
		<form class="new__blog-form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class="new__blog-intro--container">
				<div class="new__blog-input--container">
					<label class="new__blog-label">Tinklaraščio žyma</label>
					<input
						class="new__blog-input"
						type="text"
						name="blog[tag]"
						value="<%= blog.tag %>"
						required
						oninvalid="this.setCustomValidity('Tinklaraščio žyma yra būtina')"
						oninput="this.setCustomValidity('')"
					/>
				</div>
				<div class="new__blog-input--container">
					<label class="new__blog-label">Pagrindinio paveikslėlio adresas</label>
					<input
						class="new__blog-input"
						type="text"
						name="blog[blogImage]"
						value="<%= blog.blogImage %>"
						required
						oninvalid="this.setCustomValidity('Pagrindinio paveikslėlio adresas yra būtinas')"
						oninput="this.setCustomValidity('')"
					/>
				</div>
				<div class="new__blog-input--container">
					<label class="new__blog-label">Tinklaraščio pavadinimas</label>
					<input
						class="new__blog-input"
						type="text"
						name="blog[title]"
						value="<%= blog.title %>"
						required
						oninvalid="this.setCustomValidity('Tinklaraščio pavadinimas yra būtinas')"
						oninput="this.setCustomValidity('')"
					/>
				</div>
				<div class="new__blog-input--container">
					<label class="new__blog-label">Pagrindinio paveikslėlio alternatyvus tekstas</label>
					<input
						class="new__blog-input"
						type="text"
						name="blog[blogImageAlt]"
						value="<%= blog.blogImageAlt %>"
						required
						oninvalid="this.setCustomValidity('Pagrindinio paveikslėlio alternatyvus tekstas yra būtinas')"
						oninput="this.setCustomValidity('')"
					/>
				</div>
				<div class="new__blog-input--container">
					<label class="new__blog-label">Pavadinimo antraštė</label>
					<input
						class="new__blog-input"
						type="text"
						name="blog[titleHeading]"
						value="<%= blog.titleHeading %>"
						required
						oninvalid="this.setCustomValidity('Pavadinimo antraštė yra būtina')"
						oninput="this.setCustomValidity('')"
					/>
				</div>
			</div>
			<div class="new__blog-body--container">
				<label class="new__blog-label">Tinklaraščio tūrinys</label>
				<textarea class="new__blog-textarea" name="blog[body]" required>
<%= blog.body %> 
                </textarea>
			</div>

			<button class="button" type="submit">Pridėti</button>
		</form>
	</div>
</main>

<%- include("../partials/footer.ejs") %>
